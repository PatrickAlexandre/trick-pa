<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Créer un Compte</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-dark text-white">
  <div class="container mt-5">
    <div class="card bg-secondary text-white">
      <div class="card-body">
        <h3 class="text-center mb-4"><i class="fas fa-user-plus"></i> Créer un Compte</h3>
        
        <!-- Formulaire -->
        <form id="account-form">
          <div class="mb-3">
            <label for="username" class="form-label">Nom de Personnage</label>
            <input type="text" class="form-control" id="username" placeholder="Entrez votre nom" required>
          </div>
          <div class="mb-3">
            <label for="level" class="form-label">Niveau</label>
            <input type="number" class="form-control" id="level" placeholder="Entrez votre niveau" min="1" max="100" required>
          </div>
          <button type="submit" class="btn btn-warning w-100"><i class="fas fa-save"></i> Sauvegarder</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Script JavaScript -->
  <script>
    document.getElementById('account-form').addEventListener('submit', function(e) {
      e.preventDefault(); // Empêche le rechargement de la page
      
      // Récupération des valeurs
      const username = document.getElementById('username').value.trim();
      const level = parseInt(document.getElementById('level').value.trim());

      // Vérification des données
      if (!username || isNaN(level) || level < 1 || level > 100) {
        alert("Veuillez entrer un nom valide et un niveau entre 1 et 100.");
        return;
      }

      // Enregistrement dans le localStorage
      localStorage.setItem('characterName', username);
      localStorage.setItem('characterLevel', level);

      // Confirmation
      alert(`Personnage "${username}" (Niveau ${level}) enregistré !`);
      
      // Redirection ou autre action
      window.location.href = 'dashboard.html'; // Modifier vers une page cible
    });
  </script>
</body>
</html>
