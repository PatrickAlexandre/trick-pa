<!-- Modal Mon Profil -->
  <div class="modal fade" id="profilModal" tabindex="-1" aria-labelledby="profilModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-lg">
	  <div class="modal-content">
		<div class="modal-header">
		  <h5 class="modal-title" id="profilModalLabel">Mon Profil</h5>
		  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
		</div>
		<div class="modal-body">
		  <!-- Nav tabs -->
		  <ul class="nav nav-tabs nav-fill" id="profilTabs" role="tablist">
			<li class="nav-item" role="presentation">
			  <button class="nav-link active" id="genetiques-tab" data-bs-toggle="tab" data-bs-target="#genetiques" type="button" role="tab" aria-controls="genetiques" aria-selected="true">
				<i class="bi bi-person-badge"></i> Génétique
			  </button>
			</li>
			<li class="nav-item" role="presentation">
			  <button class="nav-link" id="environnement-tab" data-bs-toggle="tab" data-bs-target="#environnement" type="button" role="tab" aria-controls="environnement" aria-selected="false">
				<i class="bi bi-globe"></i> Décisions
			  </button>
			</li>
		  </ul>

		  <!-- Tab panes -->
		  <div class="tab-content mt-3">
			<!-- Informations Génétiques -->
			<div class="tab-pane fade show active" id="genetiques" role="tabpanel" aria-labelledby="genetiques-tab">
			  <form id="genetiquesForm">
				<div class="mb-3">
				  <label for="nomComplet" class="form-label">Nom Complet</label>
				  <input type="text" class="form-control" id="nomComplet" placeholder="Votre nom complet" required>
				  <div class="invalid-feedback">Veuillez entrer votre nom complet.</div>
				</div>
				<div class="mb-3">
				  <label for="dateNaissance" class="form-label">Date de Naissance</label>
				  <input type="date" class="form-control" id="dateNaissance" required>
				  <div class="invalid-feedback">Veuillez sélectionner une date de naissance valide.</div>
				</div>
				<div class="mb-3">
				  <label for="sexe" class="form-label">Sexe</label>
				  <select class="form-select" id="sexe" required>
					<option value="" selected>Choisissez...</option>
					<option>Homme</option>
					<option>Femme</option>
					<option>Autre</option>
				  </select>
				  <div class="invalid-feedback">Veuillez sélectionner votre sexe.</div>
				</div>
				<div class="mb-3">
				  <label for="taille" class="form-label">Taille (cm) 
					<i class="bi bi-info-circle text-secondary" data-bs-toggle="tooltip" data-bs-placement="top" title="Entrez votre taille en centimètres"></i>
				  </label>
				  <input type="number" class="form-control" id="taille" placeholder="Votre taille" required>
				  <div class="invalid-feedback">Veuillez entrer votre taille en cm.</div>
				</div>
			  </form>
			</div>

			<!-- Informations Environnementales -->
			<div class="tab-pane fade" id="environnement" role="tabpanel" aria-labelledby="environnement-tab">
			  <form id="environnementForm">
				<div class="mb-3">
				  <label for="poids" class="form-label">Poids (kg)</label>
				  <input type="number" class="form-control" id="poids" placeholder="Votre poids" required>
				  <div class="invalid-feedback">Veuillez entrer votre poids.</div>
				</div>
				<div class="mb-3">
				  <label for="activite" class="form-label">Niveau d'activité physique</label>
				  <select class="form-select" id="activite" required>
					<option value="" selected>Choisissez...</option>
					<option>Faible</option>
					<option>Modéré</option>
					<option>Élevé</option>
				  </select>
				  <div class="invalid-feedback">Veuillez sélectionner votre niveau d'activité physique.</div>
				</div>
				<div class="mb-3">
				  <label for="calories" class="form-label">Calories Consommées (kcal)</label>
				  <input type="number" class="form-control" id="calories" placeholder="Calories">
				</div>
				<div class="mb-3">
				  <label for="revenus" class="form-label">Revenus (€)</label>
				  <input type="number" class="form-control" id="revenus" placeholder="Vos revenus mensuels">
				</div>
				<div class="mb-3">
				  <label for="depenses" class="form-label">Dépenses (€)</label>
				  <input type="number" class="form-control" id="depenses" placeholder="Vos dépenses mensuelles">
				</div>
				<div class="mb-3">
				  <label for="epargneRange" class="form-label">Taux d'épargne (%)</label>
				  <div class="d-flex align-items-center">
					<input type="range" class="form-range me-3" id="epargneRange" min="0" max="100" step="1" value="50" 
						   oninput="epargneOutput.value = this.value + '%'">
					<output id="epargneOutput" class="badge bg-primary">50%</output>
				  </div>
				</div>
			  </form>
			</div>
		  </div>
		</div>
		<div class="modal-footer">
		  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
		  <button type="submit" class="btn btn-primary" onclick="validateForms()">Enregistrer</button>
		</div>
	  </div>
	</div>

  </div>