<!-- Liens nécessaires -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

<style>
    /* Style pour rendre la navigation plus esthétique */
    .nav-pills .nav-link {
        color: #6c757d; /* Gris neutre pour les onglets inactifs */
        font-weight: 500;
        transition: all 0.3s ease;
        border: 1px solid transparent;
        border-radius: 0.375rem;
    }

    .nav-pills .nav-link.active {
        color: #fff;
        background-color: #4285f4; /* Bleu Google */
        border-color: #4285f4;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.15);
    }

    .nav-pills .nav-link:hover {
        color: #0056b3; /* Bleu foncé au hover */
        background-color: #e8f0fe; /* Légère mise en surbrillance */
        border-color: #d2e3fc;
    }
</style>

<!-- Card avec navigation améliorée -->
<div class="card shadow-lg">
    <!-- Navigation -->
    <div class="card-header">
        <ul class="nav nav-pills justify-content-center" id="notionTabs" role="tablist">
            <li class="nav-item">
                <button class="nav-link active" id="calendar-tab" data-bs-toggle="tab" data-bs-target="#calendar" type="button" role="tab" aria-controls="calendar" aria-selected="true">
                    <i class="fas fa-calendar-alt me-1"></i> Calendrier
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="table-tab" data-bs-toggle="tab" data-bs-target="#table" type="button" role="tab" aria-controls="table" aria-selected="false">
                    <i class="fas fa-table me-1"></i> Table
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="kanban-tab" data-bs-toggle="tab" data-bs-target="#kanban" type="button" role="tab" aria-controls="kanban" aria-selected="false">
                    <i class="fas fa-columns me-1"></i> Kanban
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="timeline-tab" data-bs-toggle="tab" data-bs-target="#timeline" type="button" role="tab" aria-controls="timeline" aria-selected="false">
                    <i class="fas fa-stream me-1"></i> Chronologie
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="list-tab" data-bs-toggle="tab" data-bs-target="#list" type="button" role="tab" aria-controls="list" aria-selected="false">
                    <i class="fas fa-list me-1"></i> Liste
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="gallery-tab" data-bs-toggle="tab" data-bs-target="#gallery" type="button" role="tab" aria-controls="gallery" aria-selected="false">
                    <i class="fas fa-images me-1"></i> Galerie
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="chart-tab" data-bs-toggle="tab" data-bs-target="#chart" type="button" role="tab" aria-controls="chart" aria-selected="false">
                    <i class="fas fa-chart-bar me-1"></i> Graphique
                </button>
            </li>
        </ul>
    </div>

    <!-- Contenu des onglets -->
    <div class="tab-content">
        <%- include('./LeftPannel/Calendrier-Table.ejs') %>
        <div class="tab-pane fade" id="kanban" role="tabpanel" aria-labelledby="kanban-tab">
            <p class="text-muted">La vue Tableau Kanban permet de regrouper les éléments par propriétés, idéale pour le suivi de tâches.</p>
        </div>
        <div class="tab-pane fade" id="timeline" role="tabpanel" aria-labelledby="timeline-tab">
            <p class="text-muted">La vue Chronologie présente les éléments sur une échelle temporelle, similaire à un diagramme de Gantt.</p>
        </div>
        <div class="tab-pane fade" id="list" role="tabpanel" aria-labelledby="list-tab">
            <p class="text-muted">La vue Liste présente les éléments de manière linéaire et simplifiée.</p>
        </div>
        <div class="tab-pane fade" id="gallery" role="tabpanel" aria-labelledby="gallery-tab">
            <p class="text-muted">La vue Galerie met en avant les images ou le contenu visuel des éléments.</p>
        </div>
        <div class="tab-pane fade" id="chart" role="tabpanel" aria-labelledby="chart-tab">
            <p class="text-muted">La vue Graphique permet de représenter les données sous forme de graphiques à barres, linéaires ou circulaires.</p>
        </div>
    </div>
</div>

<!-- Script pour initialiser DataTables.js -->
<script>
    $(document).ready(function () {
        $('#exampleTable').DataTable({
            responsive: true,
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/fr.json'
            }
        });
    });
</script>
