<div class="card bg-success text-white mb-3 shadow-sm">
    <div class="card-header text-center py-3">
        <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>Statistiques</h5>
    </div>
    <div class="card-body p-0">
        <!-- Carousel -->
        <div id="statsCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <!-- Indicators -->
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#statsCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#statsCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#statsCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#statsCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
            </div>
            <!-- Carousel Content -->
            <div class="carousel-inner">
                <!-- Slide 1: Activité -->
                <div class="carousel-item active">
                    <div class="p-4 text-center">
                        <h5><i class="fas fa-running me-2"></i>Activité</h5>
                        <div class="progress" style="height: 30px;">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-primary" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                                <span class="fw-bold">Activité : 75% - Suivi en temps réel</span>
                            </div>
                        </div>
                        <p class="mt-3"><i class="fas fa-clock me-1"></i>Temps écoulé : 7h sur 10h</p>
                    </div>
                </div>
                <!-- Slide 2: Productivité -->
                <div class="carousel-item">
                    <div class="p-4 text-center">
                        <h5><i class="fas fa-tasks me-2"></i>Productivité</h5>
                        <div class="progress" style="height: 30px;">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" style="width: 90%;" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100">
                                <span class="fw-bold">Productivité : 90% - Objectifs atteints</span>
                            </div>
                        </div>
                        <p class="mt-3"><i class="fas fa-check-circle me-1"></i>Tâches complétées : 45 sur 50</p>
                    </div>
                </div>
                <!-- Slide 3: Finances -->
                <div class="carousel-item">
                    <div class="p-4 text-center">
                        <h5><i class="fas fa-wallet me-2"></i>Finances</h5>
                        <div class="progress" style="height: 30px;">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-warning" role="progressbar" style="width: 65%;" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100">
                                <span class="fw-bold">Finances : 65% - Budget analysé</span>
                            </div>
                        </div>
                        <p class="mt-3"><i class="fas fa-chart-line me-1"></i>Dépenses suivies : 1300€ sur 2000€</p>
                    </div>
                </div>
                <!-- Slide 4: Santé -->
                <div class="carousel-item">
                    <div class="p-4 text-center">
                        <h5><i class="fas fa-heartbeat me-2"></i>Santé</h5>
                        <div class="progress" style="height: 30px;">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-danger" role="progressbar" style="width: 80%;" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100">
                                <span class="fw-bold">Santé : 80% - Objectifs atteints</span>
                            </div>
                        </div>
                        <p class="mt-3"><i class="fas fa-walking me-1"></i>Pas effectués : 8000 sur 10000</p>
                    </div>
                </div>
            </div>

            <!-- Controls -->
            <button class="carousel-control-prev" type="button" data-bs-target="#statsCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Précédent</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#statsCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Suivant</span>
            </button>
        </div>

    </div>
</div>
