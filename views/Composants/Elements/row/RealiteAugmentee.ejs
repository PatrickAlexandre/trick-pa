<div class="card bg-secondary text-white mb-2">
    <div class="card-header text-center">
        <h5><i class="fas fa-chart-line"></i> Statistiques</h5>
    </div>
    <div class="card-body p-0">
        <!-- Carousel -->
        <div id="arCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <!-- Slide 1: Activité -->
                <div class="carousel-item active">
                    <div class="p-4 text-center">
                        <h5><i class="fas fa-running"></i> Activité</h5>
                        <div class="progress" style="height: 30px;">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-primary" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                                <span class="fw-bold">Activité : 75% - Suivi en temps réel</span>
                            </div>
                        </div>
                        <p class="mt-2"><i class="fas fa-clock"></i> Temps écoulé : 7h sur 10h</p>
                    </div>
                </div>
                <!-- Slide 2: Productivité -->
                <div class="carousel-item">
                    <div class="p-4 text-center">
                        <h5><i class="fas fa-tasks"></i> Productivité</h5>
                        <div class="progress" style="height: 30px;">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" style="width: 90%;" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100">
                                <span class="fw-bold">Productivité : 90% - Objectifs atteints</span>
                            </div>
                        </div>
                        <p class="mt-2"><i class="fas fa-check-circle"></i> Tâches complétées : 45 sur 50</p>
                    </div>
                </div>
                <!-- Slide 3: Finances -->
                <div class="carousel-item">
                    <div class="p-4 text-center">
                        <h5><i class="fas fa-wallet"></i> Finances</h5>
                        <div class="progress" style="height: 30px;">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-warning" role="progressbar" style="width: 65%;" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100">
                                <span class="fw-bold">Finances : 65% - Budget analysé</span>
                            </div>
                        </div>
                        <p class="mt-2"><i class="fas fa-chart-line"></i> Dépenses suivies : 1300€ sur 2000€</p>
                    </div>
                </div>
                <!-- Slide 4: Santé -->
                <div class="carousel-item">
                    <div class="p-4 text-center">
                        <h5><i class="fas fa-heartbeat"></i> Santé</h5>
                        <div class="progress" style="height: 30px;">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-danger" role="progressbar" style="width: 80%;" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100">
                                <span class="fw-bold">Santé : 80% - Objectifs atteints</span>
                            </div>
                        </div>
                        <p class="mt-2"><i class="fas fa-walking"></i> Pas effectués : 8000 sur 10000</p>
                    </div>
                </div>
            </div>
            <!-- Carousel Controls -->
            <button class="carousel-control-prev" type="button" data-bs-target="#arCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#arCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <!-- Interactive Buttons -->
        <div class="text-center my-3">
            <button type="button" class="btn btn-primary mx-2" data-bs-toggle="tooltip" data-bs-placement="top" title="Discover AR apps">
                <i class="fas fa-mobile-alt"></i> Apps
            </button>
            <button type="button" class="btn btn-success mx-2" data-bs-toggle="popover" title="AR Features" data-bs-content="Explore location-based AR and real-time object detection.">
                <i class="fas fa-lightbulb"></i> Features
            </button>
            <button type="button" class="btn btn-danger mx-2" data-bs-toggle="modal" data-bs-target="#arModal">
                <i class="fas fa-info-circle"></i> Learn More
            </button>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="arModal" tabindex="-1" aria-labelledby="arModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content bg-dark text-white">
                    <div class="modal-header">
                        <h5 class="modal-title" id="arModalLabel">About Augmented Reality</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Augmented Reality (AR) enhances the real world by overlaying digital content. It is widely used in gaming, navigation, education, and marketing.
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Explore More</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
